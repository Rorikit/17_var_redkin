:: Конфигурация веб-сервера
var server_name = @"MyWebServer";
var port = 8080.0;
var max_connections = 1000.0;
var timeout = 30.0;

var hosts = list(@"localhost", @"127.0.0.1", @"example.com");

var logging = table([
    level = @"debug",
    path = @"/var/log/webserver"
]);

var ssl = table([
    cert_path = @"/etc/ssl/cert.pem",
    key_path = @"/etc/ssl/key.pem"
]);

var welcome_message = @"Добро пожаловать на $server_name$!";
var server_info = @"Сервер работает на порту $port$ с таймаутом $timeout$";